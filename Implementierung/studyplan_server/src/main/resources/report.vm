<!DOCTPYE html>
<html>
	<head>
		<title>Report</title>
	</head>
	<body>
		<h1>$plan.getName()<h1>
		<table>
			<tbody>
				#foreach ($semester in $plan.getSemesters())
				<tr>
					<td>
						<div class = "semester">
						<h2>Semester $semester.getNumber()</h2>
						<p>$semester.getTotalCredits() ECTS</p>
						</div>
					</td>
					<td>
						#foreach ($module in $semester.getModules())
						<div class = "module">
							<h2>$module.getName()</h2>
							<p>$module.getCreditPoints() ECTS</p>
						</div>
						#end
					</td>
				</tr>
				#end
			</tbody>
		</table>
	</body>
</html>